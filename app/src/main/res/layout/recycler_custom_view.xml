<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    app:cardMaxElevation="2dp"
    app:contentPadding="10dp"
    app:cardPreventCornerOverlap="false"
   >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_meme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_meme"
            android:gravity="center"
            android:layout_marginTop="7dp"
            android:orientation="horizontal"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/like_me"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                app:iconGravity="textStart"
                android:text="@string/like"
                app:elevation="2dp"
                app:icon="@drawable/ic_thumb_up_black_24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/save_me"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                app:iconGravity="textStart"
                android:text="@string/save"
                app:elevation="2dp"
                app:icon="@drawable/ic_file_download_black_24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/share_me"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/share"
                app:elevation="2dp"
                app:icon="@drawable/ic_share_black_24dp"
                app:iconGravity="textStart" />
        </LinearLayout>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
